<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head'); %>
    <script type='text/javascript' src='js/login.js' defer></script>
</head>

<body class='container'>

  <header>
    <%- include('./partials/header_off'); %>

  </header>
  <%- %>
    <main>
      <div class='row'>
        <div class='col-sm-8'>
          <div class='jumbotron'>
            <h1>This is great</h1>
            <p>Welcome to PlacesToStay!</p>
          </div>
        </div>

        <div class='container-fluid'>
          <div class='well'>
            <form>
              <p>User Name:</p>
              <input id='uname' type='text' required />
              <p>Password:</p>
              <input id='password' type='password' required />
              <input type='button' id='login_btn' value='Login' />
              <br>
            </form>

            <div class='well'>
              <p>Register <a href='/register'>here!</a></p>
            </div>
            <div id='logged'></div>
          </div>
        </div>
      </div>
      </div>
    </main>

    <footer>
      <%- include('./partials/footer'); %>
    </footer>

</body>