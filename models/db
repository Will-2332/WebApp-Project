const mysql = require('mysql2');

const db = mysql.createConnection({
    host: 'localhost',
    user: 'root',
    password: '',
    database: 'ephp001'
});

db.connect(err => {
    if (err) {
        console.log('Connection failed to database :${err}');
        process.exit(1);
    } else {
        console.log('Connection sucessful!');
    };
});

module.exports = db;